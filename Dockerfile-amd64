# -------------------------------------- #
# Étape 1 — Build du rootfs Ubuntu Jammy #
# -------------------------------------- #

FROM alpine:latest AS builder

# Variables d'environnement
ENV REL=jammy
ENV ARCH=amd64
ENV TAG=oci-jammy-22.04

# Installer les outils nécessaires pour récupérer et extraire le rootfs Ubuntu
RUN apk add --no-cache bash curl git jq xz tar tzdata

# Télécharger le rootfs Ubuntu officiel (OCI)
RUN git clone --depth=1 https://git.launchpad.net/cloud-images/+oci/ubuntu-base -b ${TAG} /build && \
    cd /build/oci && \
    DIGEST=$(jq -r '.manifests[0].digest[7:]' < index.json) && \
    cd /build/oci/blobs/sha256 && \
    if jq -e '.layers // empty' < "${DIGEST}" >/dev/null 2>&1; then \
        TARBALL=$(jq -r '.layers[0].digest[7:]' < ${DIGEST}); \
    else \
        MULTIDIGEST=$(jq -r ".manifests[] | select(.platform.architecture == \"${ARCH}\") | .digest[7:]" < ${DIGEST}) && \
        TARBALL=$(jq -r '.layers[0].digest[7:]' < ${MULTIDIGEST}); \
    fi && \
    mkdir /rootfs && \
    tar -xf ${TARBALL} -C /rootfs && \
    rm -rf /rootfs/var/log/* /rootfs/home/ubuntu /rootfs/root/{.ssh,.bashrc,.profile} /build

# -------------------------------------- #
# Étape 3 : Image finale Ubuntu minimale #
# -------------------------------------- #

FROM scratch

# Copier le rootfs préparé
COPY --from=builder /rootfs/ /

# Labels conformes OCI
ARG BUILD_DATE
LABEL maintainer="Sam Tech Lab" \
      org.opencontainers.image.title="Ubuntu Jammy base" \
      org.opencontainers.image.description="Base Ubuntu 22.04, légère et sécurisée" \
      org.opencontainers.image.version="22.04" \
      org.opencontainers.image.architecture="amd64" \
      org.opencontainers.image.authors="Sam Tech Lab" \
      org.opencontainers.image.licenses="MIT" \
      org.opencontainers.image.source="https://github.com/Sam-Tech-Lab-Git/Docker-Ubuntu-Jammy" \
      org.opencontainers.image.created=$BUILD_DATE

# Variables d’environnement globales
ENV LANG=en_US.UTF-8 \
    LANGUAGE=en_US:en \
    LC_ALL=en_US.UTF-8 \
    TERM=xterm \
    DEBIAN_FRONTEND=noninteractive \
    TZ=UTC \
    PATH="/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"

# ------------------------------ #
# Optimisations APT et conteneur #
# ------------------------------ #

RUN set -eux && \
    echo "**** Optimisation Ubuntu pour Docker ****" && \
    \
    # Bloquer le démarrage automatique des services (systemd, etc.)
    echo '#!/bin/sh' > /usr/sbin/policy-rc.d && \
    echo 'exit 101' >> /usr/sbin/policy-rc.d && \
    chmod +x /usr/sbin/policy-rc.d && \
    \
    # Neutraliser initctl (Upstart legacy)
    dpkg-divert --local --rename --add /sbin/initctl && \
    cp -a /usr/sbin/policy-rc.d /sbin/initctl && \
    sed -i 's/^exit.*/exit 0/' /sbin/initctl && \
    \
    # Accélérer dpkg (désactive fsync)
    echo 'force-unsafe-io' > /etc/dpkg/dpkg.cfg.d/docker-apt-speedup && \
    \
    # Nettoyage automatique après apt install / update
    echo 'DPkg::Post-Invoke { "rm -f /var/cache/apt/archives/*.deb /var/cache/apt/archives/partial/*.deb /var/cache/apt/*.bin || true"; };' > /etc/apt/apt.conf.d/docker-clean && \
    echo 'APT::Update::Post-Invoke { "rm -f /var/cache/apt/archives/*.deb /var/cache/apt/archives/partial/*.deb /var/cache/apt/*.bin || true"; };' >> /etc/apt/apt.conf.d/docker-clean && \
    echo 'Dir::Cache::pkgcache "";' >> /etc/apt/apt.conf.d/docker-clean && \
    echo 'Dir::Cache::srcpkgcache "";' >> /etc/apt/apt.conf.d/docker-clean && \
    \
    # Simplifier Install
    echo 'APT::Install-Recommends "false";' > /etc/apt/apt.conf.d/00recommends && \
    echo 'APT::Install-Suggests "false";' >> /etc/apt/apt.conf.d/00recommends && \
    # Pas de traductions
    echo 'Acquire::Languages "none";' > /etc/apt/apt.conf.d/docker-no-languages && \
    \
    # Utiliser les index gzip (plus légers)
    echo 'Acquire::GzipIndexes "true"; Acquire::CompressionTypes::Order:: "gz";' > /etc/apt/apt.conf.d/docker-gzip-indexes && \
    \
    # Simplifier autoremove
    echo 'Apt::AutoRemove::SuggestsImportant "false";' > /etc/apt/apt.conf.d/docker-autoremove-suggests && \
    \
    # Indiquer que nous sommes dans un conteneur Docker
    mkdir -p /run/systemd && \
    echo 'docker' > /run/systemd/container

# ------------------ #
# Paquets essentiels #
# ------------------ #

RUN set -eux && \
    echo "**** Installer apt-utils et les locales ****" && \
    apt-get update && apt-get upgrade -y && \
    apt-get install -y --no-install-recommends apt-utils locales

RUN set -eux && \
    echo "**** Installer des paquets ****" && \
    apt-get install -y --no-install-recommends\
        cron \
        curl \
        gnupg \
        jq \
        netcat-openbsd \
        systemd \
        tzdata && \
    echo "**** générer les paramètres régionaux ****" && \
    locale-gen en_US.UTF-8
# -------------------------------------------------- #
# Sécurité & utilisateur non-root (production-grade) #
# -------------------------------------------------- #

ENV PUID=999 \
    PGID=999 \
    HOME=/config

RUN echo "**** Create secure non-root user ****" && \
    set -eux && \
    groupadd -g ${PGID} appuser && \
    useradd -u ${PUID} -g ${PGID} -d /config -s /usr/sbin/nologin appuser && \
    mkdir -p /config && \
    chown -R appuser:appuser /config && \
    chmod 750 /config && \
    \
    echo "**** Hardening system ****" && \
    echo 'umask 027' >> /etc/profile && \
    find / -xdev -type f \( -perm -4000 -o -perm -2000 \) -exec chmod a-s {} + 2>/dev/null || true && \
    find / -xdev -type f -perm /0002 -exec chmod o-w {} + 2>/dev/null || true && \
    passwd -l root && chmod 700 /root && \
    echo "**** User appuser ready (UID=${PUID}, GID=${PGID}) ****"

# --------------- #
# Nettoyage final #
# --------------- #

RUN set -eux && \
    echo "**** Nettoyage du système et des caches APT ****" && \
    apt-get autoremove && \
    apt-get clean && \
    rm -rf \
        /tmp/* \
        /var/lib/apt/lists/* \
        /var/tmp/* \
        /var/log/*

USER appuser

# Définir le shell par défaut
SHELL ["/bin/bash", "-c"]

# Commande par défaut
CMD ["/bin/bash"]
